<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AECC0000"
    android:paddingTop="22dp"
    tools:context=".experto_indice">

    <TextView
        android:id="@+id/nombre_ejercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:text="@string/experto"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/descripcion_ejercicio"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="59dp"
        android:gravity="center_horizontal"
        android:shadowColor="@color/black"
        android:text="@string/nivel_descripcion_indice"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="#E10404"
        android:onClick="Pecho"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/empujes" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:shadowColor="@color/white"
            android:shadowDx="4"
            android:shadowDy="10"
            android:shadowRadius="10"
            android:text="@string/pecho"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="195dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="#E10404"
        android:onClick="Espalda"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="498dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:shadowColor="@color/white"
            android:shadowDx="4"
            android:shadowDy="10"
            android:shadowRadius="10"
            android:text="@string/espalda"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/traccion" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="#E10404"
        android:onClick="Brazo"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/brazo" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:shadowColor="@color/white"
            android:shadowDx="4"
            android:shadowDy="10"
            android:shadowRadius="10"
            android:text="@string/brazo"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="#E10404"
        android:onClick="Hombro"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="517dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:shadowColor="@color/white"
            android:shadowDx="4"
            android:shadowDy="10"
            android:shadowRadius="10"
            android:text="@string/hombro"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/hombro" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="475dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="#E10404"
        android:onClick="Pierna"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/pierna" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:shadowColor="@color/white"
            android:shadowDx="4"
            android:shadowDy="10"
            android:shadowRadius="10"
            android:text="@string/pierna"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </LinearLayout>


</RelativeLayout>